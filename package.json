{
  "name": "telegram-raffle-stars",
  "version": "1.0.0",
  "description": "Telegram HTML5 raffle game with Stars payment integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrate.js",
    "test": "jest",
    "backup": "node database/backup.js create",
    "backup:restore": "node database/backup.js restore",
    "backup:list": "node database/backup.js list",
    "health": "node monitoring/healthcheck.js check",
    "health:metrics": "node monitoring/healthcheck.js metrics",
    "alerts:test": "node monitoring/alerts.js test",
    "alerts:check": "node monitoring/alerts.js check",
    "domain:setup": "node scripts/setup-domain.js webhook",
    "domain:info": "node scripts/setup-domain.js info",
    "domain:test": "node scripts/setup-domain.js test",
    "deploy:check": "node scripts/deploy-check.js",
    "deploy:quick": "node scripts/deploy-check.js quick",
    "logs:stats": "node -e \"console.log(JSON.stringify(require('./utils/logger').getLogStats(), null, 2))\"",
    "logs:search": "node -e \"const logger = require('./utils/logger'); console.log(JSON.stringify(logger.searchLogs(process.argv[1] || 'error'), null, 2))\"",
    "postinstall": "npm run migrate"
  },
  "keywords": ["telegram", "raffle", "stars", "html5", "game"],
  "author": "Telegram Raffle Stars Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
